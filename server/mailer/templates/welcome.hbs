            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid #667eea;
        }
        
        .user-info h3 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 18px;
        }
        
        .user-detail {
            display: flex;
            justify-content: space-between;
            font-size: 15px;
        }
        
        .detail-label {
            font-weight: 600;
            color: #666;
        }
        
        .detail-value {
            color: #333;
            font-weight: 600;
        }
        
        .cta-section {
            text-align: center;
            margin: 30px 0;
        }
        
        .start-shopping-button {
            display: inline-block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            padding: 15px 30px;
            border-radius: 25px;
            font-weight: 600;
            margin: 20px 0;
            transition: transform 0.2s ease;
            font-size: 16px;
        }
        
        .start-shopping-button:hover {
            transform: translateY(-2px);
        }
        
        .features-section {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 25px;
            margin: 30px 0;
            border-left: 4px solid #28a745;
        }
        
        .features-section h3 {
            color: #28a745;
            margin-bottom: 20px;
            font-size: 18px;
            text-align: center;
        }
        
        .features-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .features-list li {
            display: flex;
            align-items: center;
            padding: 10px 0;
            font-size: 15px;
            color: #333;
            border-bottom: 1px solid #e9ecef;
        }
        
        .features-list li:last-child {
            border-bottom: none;
        }
        
        .feature-icon {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 12px;
            font-weight: bold;
            flex-shrink: 0;
        }
        
        .feature-text {
            flex: 1;
        }
        
        .closing-message {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            margin: 30px 0;
        }
        
        .closing-message p {
            margin: 0;
            font-size: 16px;
        }
        
        .team-signature {
            font-weight: 600;
            margin-top: 10px;
        }
        
        .footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 30px;
        }
        
        .footer p {
            margin-bottom: 10px;
            opacity: 0.8;
        }
        
        .footer a {
            color: #667eea;
            text-decoration: none;
        }
        
        @media (max-width: 600px) {
            .content {
                padding: 20px;
            }
            
            .header h1 {
                font-size: 24px;
            }
            
            .features-list li {
                font-size: 14px;
            }
            
            .user-detail {
                flex-direction: column;
                gap: 5px;
            }
        }
    </style>
</head>
